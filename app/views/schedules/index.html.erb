<div class="schedule-wrapper col-12">
  <div class="schedule-header">
    <button type="button" class="btn btn-success w-100 mt-3" data-toggle="modal" data-target="#exampleModal">
      スケジュール作成
    </button>
  </div>
  <%= month_calendar events: @schedules do |date,schedules| %>
  <%= date.day %>
  <% schedules.each do |schedule| %>
  <div class="schedule-title">
    <%= link_to schedule.title.slice(0..2),"/schedules/#{schedule.id}" %>
  </div>
  <% end %>
  <% end %>

  <%= render 'index'%>

  <div class="schedule-more">
    <%= link_to_next_page schedule, 'もっと見る', remote: true, id: 'display_more' %>
  </div>
    
</div>

<%= render 'modal' %>