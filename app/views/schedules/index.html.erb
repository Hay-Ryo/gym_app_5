<div class="schedule-wrapper col-12">
  <div class="schedule-header">
    <button type="button" class="btn btn-success w-100 mt-3" data-toggle="modal" data-target="#exampleModal">
      スケジュール作成
    </button>
  </div>
  <%= month_calendar events: @schedules do |date,schedules| %>
  <%= date.day %>
  <% schedules.each do |schedule| %>
  <div class="schedule-title">
    <%= link_to schedule.title.slice(0..2),"/schedules/#{schedule.id}" %>
  </div>
  <% end %>
  <% end %>
  <div class="card sch-card">
    <% @schedules.each do |schedule| %>
    <%if schedule.created_at > Time.current-2.minute %>
      <p class="card-text">
        <%= l schedule.start_time, format: '%Y年%-m月%-d日(%a)%H:%M' %> 
        <%= link_to schedule.title, "/schedules/#{schedule.id}" %>
      </p>
  </div>
    <%else schedule.created_at > Time.current-1.minute%>
    <div class="card sch-card">
      <p class="card-text">
      <span class="new-card">NEW</span><%= l schedule.start_time, format: '%Y年%-m月%-d日(%a)%H:%M' %>  
      <%= link_to schedule.title, "/schedules/#{schedule.id}" %>
    </p>
    <% end %>
    <% end %>
  </div>
</div>

<%= render 'modal' %>